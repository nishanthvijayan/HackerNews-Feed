{
  "manifest_version": 2,

  "name": "Hacker News Feed",
  "description": "Have a quick peek at the top posts on Hacker news. ",
  "version": "0.7.0",

  "permissions": [
    "http://node-hnapi.herokuapp.com/",
    "tabs"
  ],
  "short_name": "Hacker News Feed",
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": "img/icon32.png",
    "default_popup": "popup.html"
  }
}